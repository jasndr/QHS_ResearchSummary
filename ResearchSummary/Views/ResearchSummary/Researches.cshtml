@model IEnumerable<ResearchSummary.Models.Research>
@{
    ViewBag.Title = "Researches";
}

<div class="panel panel-default">
    <div class="panel-heading"><strong>Researches</strong></div>
    <div class="panel-body">
        <table class="table table-hover table-striped" data-toggle="table"
               data-sort-name="Id"
               data-sort-order="desc"
               data-show-columns="true"
               data-search="true"
               data-show-toggle="true"
               data-pagination="true">
            <thead>
            <tr>
                <th class=" col-md-1" data-field="Id" data-sortable="true">Id</th>
                <th class="col-md-4">Title</th>
                <th data-field="Treatment" data-sortable="true" class="col-md-1">Treatment</th>
                <th class="col-md-1">Subject</th>
                <th data-field="Study" data-sortable="true" class=" col-md-1">PubDate</th>
                <th class="col-md-1">Outcome</th>
                <th class="col-md-1">PubMed</th>
                <th class="col-md-1">Detail</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var research in Model)
            {
                <tr>
                    <td class="col-md-1">@research.Id</td>
                    <td class="col-md-4">@research.Title</td>
                    <td class="col-md-1">@research.Treatment.Name</td>
                    <td class="col-md-1">@research.Subject.Name</td>
                    <td class="col-md-1">@research.PubDateTime.ToString("d")</td>
                    <td class="col-md-1">@research.Outcome.Name</td>
                    <td class="col-md-1"><a href=@research.Link target="_blank">Link</a></td>
                    <td class="col-md-1">@Html.ActionLink("Edit", "Edit", "Research", new { Id = research.Id }, new { @class = "btn glyphicon glyphicon-pencil" })</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@if (TempData["message"] != null)
{
    <p>@TempData["message"]</p>
    { Html.Partial("Alert"); }
}



