@model IEnumerable<ResearchSummary.Models.Research>
@{
    ViewBag.Title = "Researches";
}

<h2>Researches</h2>

<div class="row">
    <div class="">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th class="col-md-1">Id</th>
                    <th class="col-md-4">Title</th>
                    <th class="col-md-1">Treatment</th>
                    <th class="col-md-1">Subject</th>
                    <th class="col-md-1">Study</th>
                    <th class="col-md-1">Outcome</th>
                    <th class="col-md-1">PubMed</th>
                    <th class="col-md-1"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var research in Model)
                {
                    <tr>
                        <td class="col-md-1">@research.Id</td>
                        <td class="col-md-4">@research.Title</td>
                        <td class="col-md-1">@research.Treatment.Name</td>
                        <td class="col-md-1">@research.Subject.Name</td>
                        <td class="col-md-1">@research.Study.Name</td>
                        <td class="col-md-1">@research.Outcome.Name</td>
                        <td class="col-md-1">@research.Outcome.Name</td>
                        <td class="col-md-1">@Html.ActionLink("Edit", "Edit", "Research", new { Id = research.Id }, new { @class = "btn glyphicon glyphicon-pencil" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

